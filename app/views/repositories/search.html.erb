<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<br>
<hr>
<br>
<% unless @results["items"].blank? %>
  <ul>
  <% @results["items"].each do |item| %>
    <li>
    <strong><%= item["name"] %></strong>
    <%= item["description"] %>
    <%= link_to nil, item["html_url"] %>
    </li> 
  <% end %>
  </ul>
<% end %>
