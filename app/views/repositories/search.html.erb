<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @resp %>
    <ul>
    <% @resp["items"].each do |resp| %>
      <li>
        <%= resp["name"] %><br>
        <a href=<%= resp["html_url"] %>> <%= resp["html_url"] %> </a> <br>
        <%= resp["description"] %><br> 
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
